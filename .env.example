# Cost Plus Drugs MCP Server Configuration

# API Configuration
API_BASE_URL=https://www.costplusdrugs.com
# API_VERSION=1.0.0 # Optional: Override default API version

# Request Configuration
API_TIMEOUT_MS=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_MS=1000

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_STATIC_HOURS=24
CACHE_TTL_DYNAMIC_MINUTES=30

# MCP Server Configuration
MCP_SERVER_NAME=cost-plus-drugs-mcp-server
MCP_SERVER_VERSION=1.0.0
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Development/Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_API_RESPONSES=false

# Optional: Override default configuration values
# GENERIC_API_BASE_URL=https://www.costplusdrugs.com # Legacy support
# GENERIC_EXTERNAL_SERVICE_BASE_URL_1=https://example.com # Legacy support