# Generic MCP Server Configuration

# API Configuration
GENERIC_API_BASE_URL=http://localhost:8080/api # Example generic API base URL
GENERIC_EXTERNAL_SERVICE_BASE_URL_1=http://localhost:8081/images # Example generic external service base URL (if applicable)

# Request Configuration
API_TIMEOUT_MS=30000
API_RETRY_ATTEMPTS=3
API_RETRY_DELAY_MS=1000

# Cache Configuration
ENABLE_CACHE=true
CACHE_TTL_STATIC_HOURS=24
CACHE_TTL_DYNAMIC_MINUTES=30

# MCP Server Configuration
SERVER_NAME=generic-mcp-server
SERVER_VERSION=1.0.0
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# Development/Debug
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_API_RESPONSES=false